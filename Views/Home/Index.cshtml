
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<programacion.models.Student>
<html>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <body>
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <label>Lista</label>
            <a asp-action="Create">Create</a>
            <br>
            <table class="tabla">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Curso)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Credito)
                        </th>
                    </tr>
                </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Curso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Credito)
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.ID">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
            </table>
        </div>
        </body>
</html>
