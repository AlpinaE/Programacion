@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model programacion.models.Student


<html>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div class="text-center">


<form asp-controller="Home" asp-action="Registro">
    <div class="row">
        <label class="col-md-2">Nombre:</label>
        <div class="col-md-10">
            <input asp-for="Name">
        </div>
    </div>
     <div class="row">
        <label class="col-md-2">Birth:</label>
        <div class="col-md-10">
            <input  asp-for="Birth">
        </div>
    </div>
     <div class="row">
        <label class="col-md-2">Hobbie:</label>
        <div class="col-md-10">
            <select asp-for="Hobbie">
                <option value="Nadar">Nadar</option>
                <option value="Bicicleta">Bicicleta</option>
                <option value="Guitarra">Guitarra</option>
            </select>
        </div>
    </div>
     <div class="row">
        <label class="col-md-2">Curso:</label>
        <div class="col-md-10">
            <select asp-for="Curso">
                <option value="Matematica">Matematica</option>
                <option value="Lenguaje">Lenguaje</option>
                <option value="Fisica">Fisica</option>
            </select>
        </div>
    </div>

    <input type="submit" value="Registrar">
    </form>
</div>


</html>